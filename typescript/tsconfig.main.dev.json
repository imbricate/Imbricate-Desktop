{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "esnext"
        ],
        "outDir": "../build-dev",
        "downlevelIteration": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "isolatedModules": true
    },
    "include": [
        "../main/**/*.ts",
    ]
}